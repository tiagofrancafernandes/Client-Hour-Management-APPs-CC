# Vue 3 Development Dockerfile
# Node.js with hot-reload support for Vite

FROM node:22-alpine

LABEL maintainer="Tiago Apps Development Team"
LABEL description="Vue 3 frontend development environment"

# Install system dependencies
RUN apk add --no-cache \
    git \
    curl \
    bash

# Create app directory
WORKDIR /app

# Create node_modules directory with proper permissions
RUN mkdir -p /app/node_modules && chmod 777 /app/node_modules

# Expose Vite dev server port
EXPOSE 5173

# Default command (can be overridden in docker-compose)
CMD ["sh", "-c", "npm install && npm run dev -- --host 0.0.0.0"]
